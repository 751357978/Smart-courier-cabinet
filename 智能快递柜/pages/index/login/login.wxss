/* pages/index/login/login.wxss */

.logo {
  width: 100%;
  height: 300rpx;
  margin: 0 auto;
}

.loginContainer {
  display: flex;
  flex-direction: column;
}

.inputs {
  margin: 20rpx auto;
  width: 600rpx;
  height: 200rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ccc;
  flex-direction: column;
}

.inputs input {
  font-size: 36rpx;
  height: 100rpx;
  padding-left: 80rpx;
}

.inputs-container {
  position: relative;
}

.inputs image {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 20rpx;
  left: 10rpx;
}

.operating {
  margin: 10rpx auto;
  width: 600rpx;
  height: 50rpx;
}

.check-container {
  float: left;
  line-height: 50rpx;
}

.registered {
  float: right;
  line-height: 50rpx;
}
.login-button{
  width: 500rpx;
  height: 100rpx;
  margin: 100rpx auto;
}